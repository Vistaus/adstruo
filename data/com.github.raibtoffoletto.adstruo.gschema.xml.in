<?xml version="1.0" encoding="UTF-8" ?>
<schemalist>
    <schema path="/com/github/raibtoffoletto/adstruo/" id="com.github.raibtoffoletto.adstruo">
        <key name="settings-to-open" type="s">
            <default>''</default>
            <summary>Indicator Settings to be openned</summary>
            <description>Last settings page to be openned when accessed via the indicator</description>
        </key>
    </schema>
    <schema path="/com/github/raibtoffoletto/adstruo/temps/" id="com.github.raibtoffoletto.adstruo.temps">
        <key name="temperature-source" type="s">
            <default>'hwmon0'</default>
            <summary>Temperature Source</summary>
            <description>Device providing the temperature to be monitored</description>
        </key>
        <key name="unit-fahrenheit" type="b">
            <default>false</default>
            <summary>Unit Fahrenheit</summary>
            <description>Uses Fahrenheit instead of Celsius</description>
        </key>
        <key name="status" type="b">
            <default>false</default>
            <summary>Indicator Status</summary>
            <description>Status of the indicator, Active or Disabled</description>
        </key>
    </schema>
    <schema path="/com/github/raibtoffoletto/adstruo/weather/" id="com.github.raibtoffoletto.adstruo.weather">
        <key name="openweatherapi" type="s">
            <default>'418fd9370cf2cc9a1bd42df67af1ab2e'</default>
            <summary>OpenWeather API ID</summary>
            <description>API ID to be used with the OpenWeather service</description>
        </key>
        <key name="status" type="b">
            <default>false</default>
            <summary>Indicator Status</summary>
            <description>Status of the indicator, Active or Disabled</description>
        </key>
        <key name="symbolic-icons" type="b">
            <default>false</default>
            <summary>Symbolic Icons</summary>
            <description>Uses symbolic icons instead of the standard Elementary weather icons</description>
        </key>
    </schema>
    <schema path="/com/github/raibtoffoletto/adstruo/keys/" id="com.github.raibtoffoletto.adstruo.keys">
        <key name="capslock" type="b">
            <default>false</default>
            <summary>Capslock</summary>
            <description>Shows if the capslock keys is enable</description>
        </key>
        <key name="numlock" type="b">
            <default>false</default>
            <summary>Numlock</summary>
            <description>Shows if the numlock keys is enable</description>
        </key>
        <key name="status" type="b">
            <default>false</default>
            <summary>Indicator Status</summary>
            <description>Status of the indicator, Active or Disabled</description>
        </key>
    </schema>
</schemalist>
